  "scripts": {
    "build": "rm -r tmp-build/ || true; cp lib/ tmp-build/ -r && browserify lib/chrome/content/pinboardff.js > tmp-build/chrome/content/pinboardff.js && grunt build",
    "dev": "listen-spawn -- sh -c 'npm run build && wget --post-file=dist/firefox-pinboard.xpi http://localhost:8888/'",
    "lint": "twolfson-style lint lib/",
    "test": "npm run lint"
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "~8.1.1",
    "grunt": "~0.4.2",
    "grunt-contrib-copy": "~0.5.0",
    "grunt-curl": "~1.3.0",
    "grunt-zip": "~0.12.0",
    "jscs": "~1.7.3",
    "jshint": "~2.5.10",
    "load-grunt-tasks": "~0.3.0",
    "twolfson-style": "~1.6.0"
  },
  "keywords": [
    "pinboard",
    "extension",
    "firefox",
